<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w"
    tools:context=".Profile">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylcerView1"
        android:layout_width="match_parent"
        android:layout_height="415dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">


        <TableRow>

            <TextView
                android:id="@+id/textViewAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Logged in as: "
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="1" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="sam@gmail.com" />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:baselineAligned="true"
        android:orientation="horizontal">


        <Button
            android:id="@+id/profile"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/imgzeroing"
            android:text="" />

        <Button
            android:id="@+id/sosn"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/activities2"
            android:text="" />


        <Button
            android:id="@+id/new_image"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/proces"
            android:padding="10dp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView18"
            android:layout_width="73dp"
            android:layout_height="31dp"
            android:layout_marginLeft="20dp"
            android:text="Grouping Result"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_marginLeft="55dp"
            android:text="SOSN Result"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:text="Process Image"
            android:textAlignment="center"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>